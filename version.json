      "path": "/",
      "method": "GET",
      "description": "系统首页"
    },
    {
      "path": "/api/upload",
      "method": "POST",
      "description": "上传文件"
    },
    {
      "path": "/api/business1/compare",
      "method": "POST",
      "description": "第一业务界面：对比A2与SEC表"
    },
    {
      "path": "/api/business2/compare",
      "method": "POST",
      "description": "第二业务界面：对比年度A2表"
    },
    {
      "path": "/api/business3/generate",
      "method": "POST",
